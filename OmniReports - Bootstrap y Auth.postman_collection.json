  "item": [
    {
      "name": "Bootstrap",
      "item": [
        {
          "name": "01 - Obtener sesion bootstrap",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200/401/403 esperado', function () {",
                  "  pm.expect([200, 401, 403, 500]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-bootstrap-token",
                "value": "{{bootstrapToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/authenticator",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "authenticator"
              ]
            },
            "description": "Genera cookie de sesion bootstrap (solo si no existe ningun usuario)."
          },
          "response": []
        },
        {
